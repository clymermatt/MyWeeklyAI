generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ─── NextAuth required models ───────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Telegram delivery
  telegramChatId     String?          @unique
  telegramLinkToken  String?          @unique
  telegramLinkExpires DateTime?
  deliveryChannel    DeliveryChannel  @default(EMAIL)

  accounts       Account[]
  sessions       Session[]
  contextProfile ContextProfile?
  subscription   Subscription?
  weeklyDigests  WeeklyDigest[]
  bookmarks      Bookmark[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Application models ─────────────────────────────────────────────────────

model ContextProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  roleTitle       String?
  industry        String?
  goals           String[] @default([])
  tools           String[] @default([])
  workflows       String?  @db.Text
  experienceLevel String?
  focusTopics     String[] @default([])
  avoidTopics     String[] @default([])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  stripeCustomerId     String?            @unique
  stripeSubscriptionId String?            @unique
  status               SubscriptionStatus @default(INACTIVE)
  currentPeriodEnd     DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Source {
  id        String         @id @default(cuid())
  name      String
  type      SourceType     @default(RSS)
  category  SourceCategory @default(INDUSTRY_NEWS)
  url       String         @unique
  active    Boolean        @default(true)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  newsItems NewsItem[]
}

model NewsItem {
  id             String   @id @default(cuid())
  sourceId       String
  title          String
  url            String   @unique
  publishedAt    DateTime
  summary        String?  @db.Text
  contentSnippet String?  @db.Text
  tags           String[] @default([])
  createdAt      DateTime @default(now())

  source Source @relation(fields: [sourceId], references: [id], onDelete: Cascade)
}

model WeeklyDigest {
  id          String   @id @default(cuid())
  userId      String
  briefJson   Json
  isFree      Boolean  @default(false)
  periodStart DateTime
  periodEnd   DateTime
  sentAt      DateTime @default(now())
  createdAt   DateTime @default(now())

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookmarks Bookmark[]

  @@index([userId, periodEnd])
}

model JobRun {
  id        String    @id @default(cuid())
  jobName   String
  status    JobStatus
  startedAt DateTime  @default(now())
  endedAt   DateTime?
  error     String?   @db.Text
  metrics   Json?
  createdAt DateTime  @default(now())

  @@index([jobName, startedAt])
}

model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  url       String
  title     String
  summary   String   @db.Text
  source    String?
  digestId  String?
  createdAt DateTime @default(now())

  user   User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  digest WeeklyDigest? @relation(fields: [digestId], references: [id], onDelete: SetNull)

  @@unique([userId, url])
  @@index([userId, createdAt])
}

model SocialPost {
  id             String           @id @default(cuid())
  platform       SocialPlatform
  segment        String           // slug e.g. "software-engineers"
  segmentType    String           // "role" or "industry"
  segmentLabel   String           // "Software Engineers"
  content        String           @db.Text
  hashtags       String[]         @default([])
  sourceHeadline String?
  sourceUrl      String?
  status         SocialPostStatus @default(DRAFT)
  scheduledFor   DateTime?
  bufferPostId   String?
  weekOf         DateTime
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@index([weekOf, status])
  @@index([segment, weekOf])
}

// ─── Enums ──────────────────────────────────────────────────────────────────

enum Role {
  USER
  ADMIN
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELED
  PAST_DUE
}

enum SourceType {
  RSS
  API
}

enum SourceCategory {
  INDUSTRY_NEWS
  AI_LAB
  RESEARCH_ANALYSIS
}

enum JobStatus {
  RUNNING
  SUCCESS
  FAILURE
}

enum DeliveryChannel {
  EMAIL
  TELEGRAM
  BOTH
}

enum SocialPlatform {
  LINKEDIN
  TWITTER
}

enum SocialPostStatus {
  DRAFT
  APPROVED
  SCHEDULED
  PUBLISHED
  REJECTED
}
